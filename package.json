{
  "name": "note-taking",
  "description:": "A note taking app with draft.js",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "proxy": "http://localhost:3100",
  "scripts": {
    "start": "concurrently -k -n \"DB,API,WEB\" -c \"blue,magenta,yellow\" \"npm run start-db\" \"npm run start-api\" \"npm run start-web\"",
    "start-web": "react-scripts start",
    "start-api": "wait-on tcp:27017 && nodemon ./server/index.js",
    "start-db": "mongod --dbpath C:/MongoDB/data",
    "fixtures": "mongoimport --db noteTakingTestDB --collection notes --drop --file ./server/db/fixtures/notes.json",
    "build": "react-scripts build",
    "test-web": "react-scripts test --env=jsdom",
    "test-api": "jest --watch api.test.js",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "draft-js": "^0.10.4",
    "draft-js-plugins-editor": "^2.0.1",
    "express": "^4.16.2",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.33",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-modal": "^3.1.5",
    "react-scripts": "1.0.14",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.77.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "enzyme-to-json": "^3.2.2",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "wait-on": "^2.1.0"
  }
}

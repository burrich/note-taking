{
  "name": "note-taking",
  "description:": "A note taking app with draft.js",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "proxy": "http://localhost:3100",
  "jest": {
    "testURL": "http://localhost"
  },
  "scripts": {
    "start": "concurrently -k -n \"DB,API,WEB\" -c \"blue,magenta,yellow\" \"npm run start-db\" \"npm run start-api\" \"npm run start-web\"",
    "start-web": "react-scripts start",
    "start-api": "wait-on tcp:27017 && nodemon ./server/index.js",
    "start-db": "mongod --dbpath C:/MongoDB/data",
    "fixtures": "mongoimport --db noteTakingTestDB --collection notes --drop --file ./server/db/fixtures/notes.json",
    "build": "react-scripts build",
    "test-web": "react-scripts test --env=jsdom",
    "test-api": "jest --watch api.test.js",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "draft-js": "^0.10.5",
    "draft-js-plugins-editor": "^2.1.1",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "mongodb": "^2.2.36",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-modal": "^3.5.1",
    "react-scripts": "^1.1.4",
    "semantic-ui-css": "^2.3.3",
    "semantic-ui-react": "^0.77.2"
  },
  "devDependencies": {
    "concurrently": "^3.6.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "jest": "^23.4.2",
    "nodemon": "^1.18.3",
    "supertest": "^3.1.0",
    "wait-on": "^2.1.0"
  }
}
